<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lifemanlab.shop.modules.code.CodeMapper">

    <resultMap id="resultMapObj" type="com.lifemanlab.shop.modules.code.Code"></resultMap>
	
	<select id="selectList" resultMap="resultMapObj">
		SELECT
			a.*
		FROM code a
		JOIN codeGroup b on a.codeGroup_ccgSeq = b.ccgSeq
		WHERE 1=1
			<!-- AND ccDelNY = 0 -->
			<!-- AND ccName LIKE CONCAT('%',#{shValue},'%') -->
			<if test="shDelNy != null and !shDelNy.equals('')">AND ccDelNy = #{shDelNy}</if>
			<choose>
				<!-- <when test="shDelNy == 0">AND ccDelNy = 0</when> -->
				<!-- <when test="shDelNy == 1">AND ccDelNy = 1</when> -->
				<when test="shOption == 1">AND ccSeq = #{shValue}</when>
				<when test="shOption == 2">AND ccName LIKE CONCAT('%',#{shValue},'%')</when>
				<otherwise></otherwise>
			</choose>
	</select>
	
	<insert id="insert">
		INSERT INTO code (
			ccName
			,codeGroup_ccgSeq
			,ccOrder
			,ccUseNy
			,ccDelNy
		)
		VALUES (
			#{ccName}
			,#{codeGroup_ccgSeq}
			,#{ccOrder}
			,#{ccUseNy}
			,0
		)
			<selectKey resultType="String" keyProperty="ccSeq" order="AFTER">
				SELECT last_insert_id()
			</selectKey>
	</insert>

</mapper>