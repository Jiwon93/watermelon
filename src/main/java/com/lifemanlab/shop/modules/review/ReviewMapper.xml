<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lifemanlab.shop.modules.review.ReviewMapper">

    <resultMap id="resultMapObj" type="com.lifemanlab.shop.modules.review.Review"></resultMap>
    
    <sql id="selectCommon">
    	FROM review a
		WHERE 1=1
			<if test="shDelNy != null and !shDelNy.equals('')">AND ccDelNy = #{shDelNy}</if>
    </sql>
    
    <select id="selectList" resultMap="resultMapObj">
    	<include refid="Base.selectListUpperForMysql" />
	    	SELECT
	    		a.revSeq
	    		,a.reNickname
	    		,a.reGrade
	    		,a.reWriteTime
	    		,a.reContent
	    		,a.reWorkload
	    		,a.reOrderPrice
	    		,a.member_mmSeq
	    		,a.item_itemSeq
	    	<include refid="selectCommon" />
	    	ORDER BY a.revSeq DESC
    	<include refid="Base.selectListLowerForMysql" />
    </select>
    
    <select id="selectOneCount" resultType="Integer">
    	SELECT COUNT(*)
    	<include refid="selectCommon" />
    </select>
    
    <select id="selectOne" resultMap="resultMapObj">
    	SELECT
    		a.*
   		FROM review a
   		WHERE 1=1
   			AND revSeq = #{revSeq}
    </select>
    
</mapper>